<!DOCTYPE html>
<html lang="en">

<head>
    <title>Virtual Classroom</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="theme-color" content="#2196F3"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Google CSS -->
    <link rel="icon" type="image/png”" href="/icons/cardboard.png"/>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.min.css">
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>
    <!-- Custom CSS -->
    <link href="/css/header.css" rel="stylesheet">
    <link href="/css/main.css" rel="stylesheet">
</head>
<body>
<!-- Login Modal -->
<div id="login-modal" class="modal">
    <form class="login-form" action="/login" method="post">
        <div class="login modal-content">
            <h3>Login</h3>
            <div class="input-field">
                <input id="loginEmail" name="email" type="email" class="validate">
                <label id="loginEmail-label" for="email" data-error="Invalide Email Address">Email</label>
            </div>
            <div class="input-field">
                <input id="loginPassword" name="password" type="password" class="validate" style="margin-top: 0.5em">
                <label id="loginPassword-label" for="password">Password</label>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" id="loginCancel" class="waves-effect waves-teal modal-action btn-flat"
                    data-dismiss="modal">Cancel
            </button>
            <button type="submit" id="loginSubmit" class="waves-effect waves-teal modal-action btn-flat">Login</button>
        </div>
    </form>
</div>

<!-- Register Modal -->
<div id="register-modal" class="modal">
    <form class="register-form" action="/register" method="post">
        <div class="register modal-content">
            <h3>Register</h3>
            <div class="flex-container">
                <div class="input-field left-item">
                    <input id="registerFirstName" name="firstName" type="text" autocomplete="off">
                    <label id="registerFirstName-label" for="firstName">First Name</label>
                </div>
                <div class="input-field right-item">
                    <input id="registerLastName" name="lastName" type="text" autocomplete="off">
                    <label id="registerLastName-label" for="lastName">Last Name</label>
                </div>
            </div>
            <div class="input-field select-field">
                <select id="registerAccountType" name="registerAccountType">
                    <option value="" disabled selected>Choose your account type</option>
                    <option value="student">Student</option>
                    <option value="instructor">Instructor</option>
                </select>
            </div>
            <div id="studentID-input" class="input-field">
                <input id="registerStudentID" name="studentID" type="number" min="1">
                <label id="registerStudentID-label" for="studentID">Student ID</label>
            </div>
            <div class="input-field">
                <input id="registerEmail" name="email" type="email">
                <label id="registerEmail-label" for="email">Email</label>
            </div>
            <div class="input-field">
                <input id="registerPassword" name="password" type="password">
                <label id="registerPassword-label" for="password">Password</label>
            </div>
            <div class="input-field">
                <input id="registerPasswordConfirm" name="passwordConfirm" type="password">
                <label id="registerPasswordConfirm-label" for="passwordConfirm">Confirm Password</label>
            </div>
        </div>
        <div class="modal-footer">
            <button class="waves-effect waves-teal modal-action btn-flat" type="button" id="registerCancel"
                    data-dismiss="modal">Cancel
            </button>
            <button id="registerSubmit" class="waves-effect waves-teal modal-action btn-flat" type="submit">Register
            </button>
        </div>
    </form>
</div>
