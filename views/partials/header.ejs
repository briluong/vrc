<!DOCTYPE html>
<html lang="en">

<head>
    <title>Virtual Classroom</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="theme-color" content="#2196F3"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Google CSS -->
    <link rel="icon" type="image/png”" href="/icons/cardboard.png"/>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
    <!-- Custom CSS -->
    <link href="/css/header.css" rel="stylesheet">
    <link href="/css/main.css" rel="stylesheet">
</head>
<body>
<!-- Login Modal -->
<div id="login-modal" class="modal">
    <div class="login modal-content">
        <h3>Login</h3>
        <div class="input-field">
            <input id="loginEmail" name="loginEmail" type="email" class="validate">
            <label id="loginEmail-label" for="loginEmail" data-error="Invalide Email Address">Email</label>
        </div>
        <div class="input-field">
            <input id="loginPassword" name="loginPassword" type="password" class="validate">
            <label id="loginPassword-label" for="loginPassword">Password</label>
        </div>
    </div>
    <div class="modal-footer">
        <button id="loginCancel" class="waves-effect waves-teal modal-action btn-flat" >Cancel</button>
        <button id="loginSubmit" class="waves-effect waves-teal modal-action btn-flat" >Login</button>
    </div>
</div>

<!-- Register Modal -->
<div id="register-modal" class="modal">
    <div class="register modal-content">
        <h3>Register</h3>
        <div class="flex-container">
            <div class="input-field left-item">
                <input id="registerFirstName" name="registerFirstName" type="text" autocomplete="off">
                <label id="registerFirstName-label" for="registerFirstName">First Name</label>
            </div>
            <div class="input-field right-item">
                <input id="registerLastName" name="registerLastName" type="text" autocomplete="off">
                <label id="registerLastName-label" for="registerLastName">Last Name</label>
            </div>
        </div>
        <div class="input-field select-field">
            <select id="registerAccountType" name="registerAccountType">
                <option value="" disabled selected>Choose your account type</option>
                <option value="student">Student</option>
                <option value="instructor">Instructor</option>
            </select>
        </div>
        <div id="utoridInput" class="input-field">
            <input id="registerUTORID" name="registerUTORID" type="number" min="1">
            <label id="registerUTORID-label" for="registerUTORID">UTORID</label>
        </div>
        <div class="input-field">
            <input id="registerEmail" name="registerEmail" type="email">
            <label id="registerEmail-label" for="registerEmail">Email</label>
        </div>
        <div class="input-field">
            <input id="registerPassword" name="registerPassword" type="password">
            <label id="registerPassword-label" for="registerPassword">Password</label>
        </div>
    </div>
    <div class="modal-footer">
        <button class="waves-effect waves-teal modal-action btn-flat" type="button" id="registerCancel">Cancel</button>
        <button id="registerSubmit"class="waves-effect waves-teal modal-action btn-flat" type="submit">Register</button>
    </div>
</div>
<nav id="nav">
    <div class="nav-wrapper">
        <a href="/" class="brand-logo"><img class="logo" src="/icons/cardboard.png"></a>
