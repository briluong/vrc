<!DOCTYPE html>
<html lang="en">

<head>
    <title>Virtual Classroom</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="theme-color" content="#2196F3"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Google CSS -->
    <link rel="icon" type="image/pngâ€" href="/icons/cardboard.png"/>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>
    <!-- Custom CSS -->
    <link href="/css/main.css" rel="stylesheet">
    <link href="/css/settings.css" rel="stylesheet">
</head>
<body>
<% console.log(errorMessage.length > 0) %>
<% console.log(errorMessage) %>
<% if(errorMessage.length > 0){ %>
<% if(errorMessage[0] == 'Changes were successful!' || errorMessage[0] == "Password Successfully Changed!"){ %>
<p class="flashMessageGood"><%= errorMessage[0] %></p>
<% } else{ %>
<p class="flashMessage"><%= errorMessage[0] %></p>
<% } %>
<% } %>
<%- include partials/header.ejs %>
<div class="main settings">
    <div class="innerMain">
        <div class="card">
            <form class="edit-personal-information">
                <div class="card-content">
                    <div class="card-title">
                        <p>Personal Information</p>
                    </div>
                    <div class="flex-container">
                        <div class="input-field left-item">
                            <input id="firstName" name="firstName" type="text" value="<%= user.firstName %>">
                            <label id="firstName-label" class="active" for="firstName">First Name</label>
                        </div>
                        <div class="input-field right-item">
                            <input id="lastName" name="lastName" type="text" value="<%= user.lastName %>">
                            <label id="lastName-label" class="active" for="lastName">Last Name</label>
                        </div>
                    </div>
                </div>
                <div class="card-action">
                    <button href="#edit-personal-modal" class="waves-effect waves-teal btn-flat modal-trigger"
                            type="button" id="confirm-modal-trigger">Update Name
                    </button>
                    <button href="#edit-password-modal" class="waves-effect waves-teal btn-flat modal-trigger"
                            type="button" id="passwordChange-trigger">Change Password
                    </button>
                </div>
            </form>
        </div>
        <div id="edit-personal-modal" class="modal">
            <div class="modal-content">
                <p>Are you sure you want to change your personal information?</p>
            </div>
            <div class="modal-footer">
                <button class="waves-effect waves-teal btn-flat" type="button" id="confirm-cancel-change">Cancel
                </button>
                <button class="waves-effect waves-teal btn-flat" type="button" id="confirm-change">Confirm</button>
            </div>
        </div>
        <div id="edit-password-modal" class="modal">
            <form id="edit-password-form">
                <div class="modal-content">
                    <h3>Change Passworld</h3>
                    <div class="flex-container">
                        <div class="input-field">
                            <input id="currentPassword" name="currentPassword" type="password">
                            <label id="currentPassword-label" for="currentPassword">Current Password</label>
                        </div>
                    </div>
                    <div class="flex-container">
                        <div class="input-field">
                            <input id="newPassword" name="newPassword" type="password">
                            <label id="newPassword-label" for="newPassword">New Password</label>
                        </div>
                    </div>
                    <div class="flex-container">
                        <div class="input-field">
                            <input id="newPasswordConfirm" name="newPasswordConfirm" type="password">
                            <label id="newPasswordConfirm-label" for="newPasswordConfirm">Confirm New Password</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="waves-effect waves-teal modal-action btn-flat" type="button" id="passwordCancel"
                            data-dismiss="modal">Cancel
                    </button>
                    <button id="passwordSubmit" class="waves-effect waves-teal modal-action btn-flat" type="button">Confirm
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include partials/footer.ejs %>
</body>
<script src="/js/settings.js"></script>
</html>
