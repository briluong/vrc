<% embedYoutubeURL = function (url) {
    var splitURL = url.split("watch?v=")
    return splitURL[0] + "embed/" + splitURL[1]
} %>
<% checkYoutubeURL = function (url) {
    let regex = /^(http(s)??\:\/\/)?(www\.)?((youtube\.com\/watch\?v=)|(youtu.be\/))([a-zA-Z0-9\-_])+/;
    if (regex.test((url))) {
        return true
    }
    return false
} %>

