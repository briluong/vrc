        }
        return false
    }
    return false
} %>

<% findStudentName = function (id) {
    for (var i = 0; i < users.length; i++) {
        if (users[i].accountType == 'student') {
            if (users[i].studentID == id) {
                return users[i].firstName + " " + users[i].lastName
            }
        }
    }
    return " "
} %>
<% checkActiveLectures = function (courses) {
